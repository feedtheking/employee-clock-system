<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Kiosk"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Hidden PIN field (shows dots when typing) -->
    <EditText
        android:id="@+id/editTextPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter PIN"
        android:inputType="numberPassword"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Numpad -->
    <GridLayout
        android:id="@+id/numpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignBounds"
        android:layout_gravity="center">

        <!-- Row 1 -->
        <Button android:id="@+id/btn1"
            style="?android:attr/buttonStyleSmall"
            android:text="1"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btn2"
            style="?android:attr/buttonStyleSmall"
            android:text="2"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btn3"
            style="?android:attr/buttonStyleSmall"
            android:text="3"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <!-- Row 2 -->
        <Button android:id="@+id/btn4"
            style="?android:attr/buttonStyleSmall"
            android:text="4"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btn5"
            style="?android:attr/buttonStyleSmall"
            android:text="5"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btn6"
            style="?android:attr/buttonStyleSmall"
            android:text="6"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <!-- Row 3 -->
        <Button android:id="@+id/btn7"
            style="?android:attr/buttonStyleSmall"
            android:text="7"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btn8"
            style="?android:attr/buttonStyleSmall"
            android:text="8"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btn9"
            style="?android:attr/buttonStyleSmall"
            android:text="9"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <!-- Row 4 -->
        <Button android:id="@+id/btnClear"
            style="?android:attr/buttonStyleSmall"
            android:text="Clear"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btn0"
            style="?android:attr/buttonStyleSmall"
            android:text="0"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button android:id="@+id/btnEnter"
            style="?android:attr/buttonStyleSmall"
            android:text="Enter"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </GridLayout>

</LinearLayout>
